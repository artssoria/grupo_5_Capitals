    <div class="principal">
      <div class="register-form">
          <div>
              <h1>Registrate y forma parte de TravelXJujuy</h1>
          </div>
          <form action="/users/register" method="post">
              <input type="hidden" id="id" name="id">
              <div class="cont-input">
                <input type="text" id="firstName" name="firstName" placeholder="Nombre" value="<%=locals.old ? old.firstName : '' %>">
                <% if (locals.errors && errors.firstName) { %>
                  <p>⚠</p>
                <%}%>
              </div>
              <div class="cont-input">
                <input type="text" id="lastName" name="lastName" placeholder="Apellido" value="<%=locals.old ? old.lastName : '' %>">
                <% if (locals.errors && errors.lastName) { %>
                  <p>⚠</p>
                <%}%>
              </div>
              <div class="cont-input">
                <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="<%=locals.errors && errors.email ? 'Email ⚠⚠⚠⚠⚠' : 'Email' %>" 
                required 
                value="<%=locals.old ? old.email : '' %>"
                class="<%=locals.errors && errors.email ? 'is-invalid' : '' %>"
                >
                <% if (locals.errors && errors.email) { %>
                  <p>⚠</p>
                <%}%>
              </div>
              
              <div class="cont-input">
                <input type="password" id="password" name="password" 
                placeholder="Contraseña" 
                required class="is-invalid">
                <% if (locals.errors && errors.password) { %>
                  <p>⚠</p>
                <%}%>
              </div>
              
              <input type="tel" id="phone" name="phone" placeholder="Telefono" required value="<%=locals.old ? old.phone : '' %>">
              <select name="nationality" id="nationality">
                <% nations.forEach(nation => {%>
                  <option value="<%=nation.id%>" <%= locals.old && old.nationality == nation.id ? 'selected' : '' %>><%=nation.name%></option>
                <%})%>
              </select>
              <select name="province" id="province">
                <% provinces.forEach(province => { %>
                  <option value="<%= province.id %>" <%= locals.old && old.province == province.id ? 'selected' : '' %>><%= province.name %></option>
                <% }) %>
              </select>
              <!-- <input type="text" id="nationality" name="nationality" placeholder="Nacionalidad" required>
              <input type="text" id="province" name="province" placeholder="Provincia o estado" required> -->
              <!-- <select id="userType" name="userType" required>
                  <option value="">Tipo de usuario</option>
                  <option value="admin">Admin</option>
                  <option value="user">User</option>
              </select> -->
              <label class="terminos" for="terms">Acepto los <a href="#" id="termsLink">términos y condiciones</a></label>
              <br>
              <input type="checkbox" id="terms" name="terms" required>
              <button type="submit">Registrarse</button>
          </form>
          <div class="cont_errores">
            <%  if(locals.errors) { %>
                <%  for (let error in errors) { %>
                        <p class="errorMensaje"><%= errors[error].msg %> </p>
            <%      } %>
            <%  };  %>
          </div>
      </div>
    </div>
        
      

