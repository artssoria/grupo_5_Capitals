<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normal.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin_carga.css">
    <link rel="icon" href="/images/icono.png" type="image/png">
    <script src="https://kit.fontawesome.com/ca385f949f.js" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="/css/amulya.css">

    <title>TravelXJujuy</title>
</head>
<body>
    <%- include('partials/headerAdmin') %>
    <main>
        <div class="cont_errores">
            <%  if(locals.errors) { 
                    errors.forEach(error => { %>
                        <p class="errorMensaje"><%= error.msg %> </p>
            <%      }) 
                };
            %>
        </div>
        <form method="POST" action="/admin/carga-productos" enctype="multipart/form-data">
            <h1>Carga de producto</h1>
            <div class="formulario">
                <div class="bloque_simple">
                    <label for="nombre_product">Nombre del producto</label>
                    <input type="text" id="nombre_product" name="nombre_product" value="<%= locals.old && old.nombre_product ? old.nombre_product : '' %>">
                </div>

                <div class="bloque_area">
                    <label for="descripcion">Descripción del producto</label>
                    <textarea name="descripcion" id="descripcion" cols="30" rows="10"><%= locals.old && old.descripcion ? old.descripcion : '' %></textarea>
                </div>

                <div class="bloque_simple">
                    <label for="imagen_product">Subir imagen</label>
                    <input type="file" name="imagen_product">
                </div>

                <div class="opcion">
                    <label for="hospedaje_product">Hospedaje</label>
                    <div class="opciones">
                        <label for="hospedaje_product">Hotel
                            <input type="radio" name="hospedaje_product" value="Hotel" <%=locals.old && old.hospedaje_product === 'Hotel' ? 'checked' : '' %>>
                        </label>
                        <label for="hospedaje_product">Hostal
                            <input type="radio" name="hospedaje_product" value="Hostal" <%=locals.old && old.hospedaje_product === 'Hostal' ? 'checked' : '' %>>
                        </label>
                    </div>
                </div>

                <div class="opcion">
                    <label for="servicio_product">Categoría del servicio</label>
                    <div class="opciones">
                        <label for="servicio_product">Viaje de egresados
                            <input type="radio" name="servicio_product" value="Egresados" <%=locals.old && old.servicio_product === 'Egresados' ? 'checked' : '' %>>
                        </label>
                        <label for="servicio_product">Familiar
                            <input type="radio" name="servicio_product" value="Familiar" <%=locals.old && old.servicio_product === 'Familiar' ? 'checked' : '' %>>
                        </label>
                        <label for="servicio_product">Express
                            <input type="radio" name="servicio_product" value="Express" <%=locals.old && old.servicio_product === 'Express' ? 'checked' : '' %>>
                        </label>
                    </div>
                </div>

                <div class="opcion">
                    <label for="region_product">Categoría de la región</label>
                    <div class="opciones">
                        <label for="region_product">Yungas
                            <input type="radio" name="region_product" value="Yungas" <%=locals.old && old.region_product === 'Yungas' ? 'checked' : '' %>>
                        </label>
                        <label for="region_product">Puna
                            <input type="radio" name="region_product" value="Puna" <%=locals.old && old.region_product === 'Puna' ? 'checked' : '' %>>
                        </label>
                        <label for="region_product">Valles
                            <input type="radio" name="region_product" value="Valles" <%=locals.old && old.region_product === 'Valles' ? 'checked' : '' %>>
                        </label>
                        <label for="region_product">Quebrada
                            <input type="radio" name="region_product" value="Quebrada" <%=locals.old && old.region_product === 'Quebrada' ? 'checked' : '' %>>
                        </label>
                    </div>
                </div>

                <div class="bloque_simple">
                    <label for="precio_product">Precio de producto</label>
                    <input type="number" step="0.01" pattern="\d+(\.\d{1,2})?" id="precio_product" name="precio_product" value="<%= locals.old && old.precio_product ? old.precio_product : '' %>">

                </div>
                <div class="botones">
                    <button type="submit">Enviar</button>
                    <button type="reset">Borrar</button>
                </div>
            </div>
        </form>

    </main>
    <%- include('partials/footer') %>
</body>
</html>